extends ../layouts/main

block body

    section.container
        .row
            div(class="col-12 col-md-6 offset-md-3 mb-3")
                h1(class="mb-3 text-center") Products (pug)

                table.table
                    thead
                        tr
                            th(scope="col") ID
                            th(scope="col") Title
                            th(scope="col") Price
                            th(scope="col") Image
                    tbody 
                        each product in products
                            tr 
                                td= product.id
                                td= product.title
                                td= product.price
                                td
                                    img(src=product.thumbnail alt=product.title width="20" height="20")
                                td 
                                    a(href="/productos/"+product.id class="w-100 btn btn-sm btn-primary") View
 
            div(class="col-12 col-md-6 offset-md-3")
                a(href="/" class="w-100 btn btn-lg btn-dark") Add product