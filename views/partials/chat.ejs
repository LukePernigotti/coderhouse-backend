<form action="#" method="post" class="js-chat flex flex-col">
    <h2 class="mb-4">Chat (compression: <span class="js-chat__compression"></span>%)</h2>

    <label for="username">Username*:</label>
    <input class="js-chat__username form-control mb-3" type="text" name="username" id="username" required />
    
    <label for="firstname">First name*:</label>
    <input class="js-chat__firstname form-control mb-3" type="text" name="firstname" id="firstname" required />
    
    <label for="lastname">Last name*:</label>
    <input class="js-chat__lastname form-control mb-3" type="text" name="lastname" id="lastname" required />
        
    <label for="age">Age*:</label>
    <input class="js-chat__age form-control mb-3" type="text" name="age" id="age" required />
    
    <label for="alias">Alias*:</label>
    <input class="js-chat__alias form-control mb-3" type="text" name="alias" id="alias" required />

    <label for="avatar">Avatar (url)*:</label>
    <input class="js-chat__avatar form-control mb-3" type="text" name="avatar" id="avatar" required />

    <label for="email">Email*:</label>
    <input class="js-chat__email form-control mb-3" type="email" name="email" id="email" required />

    <label for="message">Message:</label>
    <textarea class="js-chat__textarea form-control mb-3" name="message" id="message" cols="15" rows="4"></textarea>

    <button class="js-chat__send mb-3 py-1 px-4 rounded text-sm bg-blue-800 text-white hover:bg-blue-600">Send</button>

    <span>Chat:</span>
    <div class="js-chat__messages border border-info rounded p-2" style="height: 300px; overflow-y: auto;">

    </div>
</form>