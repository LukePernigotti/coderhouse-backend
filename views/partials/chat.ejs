<div class="js-chat d-flex flex-column">
    <label for="username">Username:</label>
    <input class="js-chat__username form-control mb-3" type="text" name="username" id="username" />

    <label for="message">Message:</label>
    <textarea class="js-chat__textarea form-control mb-3" name="message" id="message" cols="15" rows="4"></textarea>

    <button class="js-chat__send mb-3 btn btn-primary">Send</button>

    <span>Chat:</span>
    <div class="js-chat__messages border border-info rounded p-2" style="height: 300px; overflow-y: auto;">
        <% data.chatMessagesArray.forEach(messageData => { %>
            <p class="mb-1"><b><%- messageData.username %>:</b> <%- messageData.message %></p>
        <% }) %>
    </div>
</div>